<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#572E2E"
    android:orientation="vertical"
    tools:context=".activity.ContactActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb1"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#572E2E"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAvatarContact"
                android:layout_width="97dp"
                android:layout_height="101dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/account"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="A Liên hệ 1"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgBtnEmail"
                    android:layout_width="67dp"
                    android:layout_height="68dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="12dp"
                    android:adjustViewBounds="true"
                    android:background="#572E2E"
                    android:cropToPadding="false"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/mail" />

                <ImageButton
                    android:id="@+id/imgBtnCall"
                    android:layout_width="67dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:background="#572E2E"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/phone_call" />

                <ImageButton
                    android:id="@+id/imgBtnText"
                    android:layout_width="67dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="10dp"
                    android:background="#572E2E"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/chat_ic" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Thông tin liên hệ"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Số điện thoại"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lnPhoneContact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Email"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lnEmailContact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/relation"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_margin="20dp"
                android:drawableLeft="@drawable/baseline_people_24"
                android:drawablePadding="15dp"
                android:padding="9dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNote"
                android:layout_width="307dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:backgroundTint="#572E2E"
                android:drawableLeft="@drawable/note"
                android:padding="1dp"
                android:text="Ghi chú"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>