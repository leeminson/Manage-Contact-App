<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#572E2E"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_contact_image"
            android:layout_width="91dp"
            android:layout_height="81dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/user" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#572E2E"
            android:backgroundTint="#572E2E">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#572E2E"
                    android:text="Tên liên hệ :"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_appointmentContactName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#572E2E"
                    android:text="Thời gian :"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_appointmentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#572E2E"
                    android:text="địa điểm :"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_appointmentAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textColor="#FFFFFF" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#572E2E"
        android:divider="#3E3E3E"
        android:dividerPadding="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#572E2E"
            android:text="Note : "
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_appointmentNote"
            android:layout_width="206dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#572E2E"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:backgroundTint="#572E2E"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/edit"
            android:text="Edit" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="43dp"
            android:layout_height="39dp"
            android:background="#FFFFFF"
            android:backgroundTint="#572E2E"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_delete_24"
            android:text="Delete" />

    </LinearLayout>

</LinearLayout>
