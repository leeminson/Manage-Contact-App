<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#572E2E"
    tools:context=".activity.AddContactActivity">

  <ScrollView
      android:id="@+id/scrollView2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:backgroundTint="#572E2E"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.927">

    <LinearLayout

        android:id="@+id/lnlayoutAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <ImageView
          android:layout_marginTop="25dp"
          android:scaleType="fitXY"
          android:adjustViewBounds="true"
          android:id="@+id/imgvAvatar"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_gravity="center"
          android:layout_marginBottom="15dp"
          app:srcCompat="@drawable/account"
          tools:srcCompat="@tools:sample/avatars" />

      <Button
          android:id="@+id/btnAddPhoto"
          android:layout_width="176dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:backgroundTint="#572E2E"
          android:gravity="center"
          android:text="Thêm ảnh" />

      <EditText
          android:maxLength="20"
          android:id="@+id/name_input"
          android:layout_width="match_parent"
          android:layout_height="46dp"
          android:layout_margin="15dp"
          android:background="@drawable/rounder_corner"
          android:backgroundTint="#FFFFFF"
          android:drawableLeft="@drawable/account"
          android:drawablePadding="15dp"
          android:ems="10"
          android:hint="Tên"
          android:inputType="text|textCapWords"
          android:padding="10dp"
          android:textColor="#000000"
          android:textColorHint="#000000" />

      <EditText
          android:maxLength="11"
          android:id="@+id/Pnum_input"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_margin="15dp"
          android:background="@drawable/rounder_corner"
          android:backgroundTint="#FFFFFF"
          android:padding="10dp"
          android:drawableLeft="@drawable/phone_call"
          android:drawablePadding="20dp"
          android:ems="10"
          android:hint="Số điện thoại"
          android:inputType="phone"
          android:textColor="#000000"
          android:textColorHint="#000000" />

      <LinearLayout
          android:id="@+id/lnPhone"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

      </LinearLayout>

      <ImageButton
          android:id="@+id/btnAddFPhone"
          android:layout_width="106dp"
          android:layout_height="wrap_content"
          android:backgroundTint="#572E2E"
          app:srcCompat="@drawable/baseline_add_24" />

      <EditText
          android:maxLength="50"
          android:id="@+id/email_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="15dp"
          android:background="@drawable/rounder_corner"
          android:backgroundTint="#FFFFFF"
          android:drawableLeft="@drawable/mail"
          android:drawablePadding="15dp"
          android:ems="10"
          android:hint="Email"
          android:inputType="textEmailAddress"
          android:padding="10dp"
          android:textColor="#000000"
          android:textColorHint="#000000" />

      <LinearLayout
          android:id="@+id/lnEmail"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

      </LinearLayout>

      <ImageButton
          android:id="@+id/btnAddFEmail"
          android:layout_width="110dp"
          android:layout_height="wrap_content"
          android:backgroundTint="#572E2E"
          app:srcCompat="@drawable/baseline_add_24" />

      <Spinner
          android:id="@+id/cateSpinner"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_margin="15dp"
          android:background="#FFFFFF" />

      <LinearLayout
          android:id="@+id/lnCate"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

      </LinearLayout>

      <ImageButton
          android:id="@+id/btnAddFCategory"
          android:layout_width="112dp"
          android:layout_height="wrap_content"
          android:backgroundTint="#572E2E"
          android:src="@drawable/baseline_add_24" />

      <Button
          android:id="@+id/btnInsert"
          android:layout_width="284dp"
          android:layout_height="wrap_content"
          android:backgroundTint="#572E2E"
          android:layout_gravity="center"
          android:text="Lưu" />

    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>